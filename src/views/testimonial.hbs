<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Personal Web | {{tittleTab}}</title>
    <link rel="icon" type="image/x-icon" href="../assets/img/fav-mylogo.png" />

    <link rel="stylesheet" href="../assets/css/testimonial.css" />
    <link rel="stylesheet" href="../assets/css/index.css" />
    <link rel="stylesheet" href="../assets/css/nav.css" />
    <!-- Bootsrap cdn -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <!-- Fontawesome cdn -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
      integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
  </head>
  <body>
    <!-- Navbar -->
    <nav class="navbar bg-nav navbar-expand-lg px-lg-5 px-sm-4 py-4">
      <div class="container-fluid">
        <a class="navbar-brand nav-logo me-5" href="#"><img
            src="../assets/img/mylogo.png"
            alt=""
          /></a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item me-4">
              <a class="nav-link" aria-current="page" href="/home">Home</a>
            </li>
            {{#if isLogin}}
              <li class="nav-item me-4">
                <a class="nav-link text-dark" href="/project">Add Project</a>
              </li>
            {{/if}}
            <li class="nav-item">
              <a
                class="nav-link nav-active link-active fw-bold"
                href="#"
              >Testimonials</a>
            </li>
          </ul>
          <form class="d-flex" role="">

            {{#if isLogin}}
              <div class="mt-2 me-3"><h5 class="text-secondary">Hallo,
                  {{user.name}}</h5>
              </div>
              <div class="logout-group mt-3 me-3"><a href="">
                  <i
                    title="Click here to Logout"
                    class="fa-solid text-dark fa-right-from-bracket mt-1 fa-xl"
                  ></i></a></div>
            {{else}}
              <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item me-4">
                  <a
                    class="nav-link nav-active fw-bold"
                    href="/register"
                  >Register</a>
                </li>
                <li class="nav-item me-4">
                  <a class="nav-link text-dark" href="/login">Login</a>
                </li>
              </ul>
            {{/if}}

          </form>
          <a
            href="/contact-me"
            class="btn btn-contact-me bg-primary text-light"
            type="submit"
          >
            Contact Me</a>
        </div>
      </div>
    </nav>
    <!-- Close Navbar -->

    <section class="sec-project px-5 pt-3 pb-5">
      <div class="tittle mt-5">
        <h1 class="text-center fw-bold">MY TESTIMONIAL</h1>
      </div>

      <div class="rate-group text-center mt-5">
        <h5>Rating By Star</h5>
        <div class="btn-rate mt-3">
          <button
            class="px-2 border-0 bg-dark text-white"
            onclick="allTestimonial()"
          >
            All
            <i class="fa-solid fa-star fa-sm" style="color: #fff"></i>
          </button>
          <button
            class="px-2 border-0 bg-dark text-white"
            onclick="testimonialClick(1)"
          >
            1
            <i class="fa-solid fa-star fa-sm" style="color: #fff"></i>
          </button>
          <button
            class="px-2 border-0 bg-dark text-white"
            onclick="testimonialClick(2)"
          >
            2
            <i class="fa-solid fa-star fa-sm" style="color: #fff"></i>
          </button>
          <button
            class="px-2 border-0 bg-dark text-white"
            onclick="testimonialClick(3)"
          >
            3
            <i class="fa-solid fa-star fa-sm" style="color: #fff"></i>
          </button>
          <button
            class="px-2 border-0 bg-dark text-white"
            onclick="testimonialClick(4)"
          >
            4
            <i class="fa-solid fa-star fa-sm" style="color: #fff"></i>
          </button>
          <button
            class="px-2 border-0 bg-dark text-white"
            onclick="testimonialClick(5)"
          >
            5
            <i class="fa-solid fa-star fa-sm" style="color: #fff"></i>
          </button>
        </div>
      </div>

      <!-- Content Testimonial -->
      <div
        class="container-myProject d-flex flex-wrap justify-content-center mt-5"
        id="myTestimonial"
      >
        <!-- Data added from server -->
      </div>
      <!-- Close Content Testimonial -->
    </section>

    <script src="../assets/js/ajax.js"></script>
    <script src="../assets/js/nav.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"
    ></script>
  </body>
</html>