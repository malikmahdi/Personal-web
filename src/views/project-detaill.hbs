<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Personal Web | Detail Project</title>
    <link rel="icon" type="image/x-icon" href="../assets/img/fav-mylogo.png" />

    <link rel="stylesheet" href="../assets/css/project-detail.css" />
    <link rel="stylesheet" href="../assets/css/nav.css" />
    <link rel="stylesheet" href="../assets/css/index.css" />
    <!-- Bootstrap Cdn -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <!-- Fontawesome Cdn -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
      integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
  </head>
  <body>
    <!-- Navbar -->
    <nav
      class="navbar bg-nav navbar-expand-lg pe-lg-5 ps-lg-5 pe-sm-4 ps-sm-4 pt-4 pb-4"
    >
      <div class="container-fluid">
        <a class="navbar-brand me-5" href="#"><img
            src="../assets/img/mylogo.png"
            alt="Logo Dumbways"
          /></a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item me-4">
              <a
                class="nav-link text-dark"
                aria-current="page"
                href="/home"
              >Home</a>
            </li>
            <li class="nav-item me-4">
              <a class="nav-link fw-bold nav-active" href="/project">Add Project</a>
            </li>
            <li class="nav-item me-4">
              <a class="nav-link text-dark" href="/testimonial">Testimonials</a>
            </li>
          </ul>
          <form class="d-flex" role="search">
            <a
              href="/contact-me"
              class="btn btn-contact-me bg-primary text-light w-100"
              type="submit"
            >Contact Me</a>
          </form>
        </div>
      </div>
    </nav>
    <!-- Close Navbar -->

    <!-- Content Project Detail -->
    <section class="container pb-5">
      <div class="text-center mt-3">
        <h1 class="fw-bold mt-5" id="tittle">{{dataDetail.tittle}}</h1>
      </div>
      <!-- Flex -->
      <div class="d-lg-flex">
        <!-- Col image -->
        <div class="col-lg-7 col-sm-12 mt-5 col-img pe-4">
          <img
            src="../assets/img/laptop.jpg"
            class="img-fluid"
            id="image"
            alt=""
          />
        </div>
        <!-- Close Col image -->

        <!-- Col Time Info -->
        <div class="col-lg-5 col-sm-12 mt-5 col-info ps-3">
          <!-- Duration Group -->
          <div class="duration-group">
            <h4 class="fs-2">Duration</h4>
            <!-- Calcu Group -->
            <div class="calcu-group d-flex align-items-center">
              <img src="../assets/img/calculator.png" class="me-2" alt="" />
              <p class="mt-3 text-secondary" id="thisTime">
                {{dataDetail.startDate}}
                |
                {{dataDetail.endDate}}
              </p>
            </div>
            <!-- Close Calcu Group -->

            <!-- Clock Group -->
            <div class="clock-group d-flex align-items-center">
              <img src="../assets/img/clock.png" class="me-2" alt="" />
              <p
                class="mt-3 text-secondary"
                id="duration"
              >{{dataDetail.timeProject}}</p>
            </div>
            <!-- Close Clock Group -->
          </div>
          <!-- Close Duration Group -->

          <!-- Tecnologies Group -->
          <div class="Tech-group mt-5">
            <h4 class="fs-2">Technologies</h4>

            <div class="icon-tech d-flex mt-3">
              {{#each dataDetail.tech}}
                <div class="d-flex mt-4">
                  <i class="fa-brands {{this}} fa-2xl"></i>
                </div>
              {{/each}}
            </div>
          </div>
          <!-- Close Technologies Group -->
        </div>
        <!-- Close Col Time Info -->
      </div>
      <!-- Close flex -->

      <div class="paraf-content mt-5">
        <p class="paraf" id="desc">
          {{dataDetail.desc}}
        </p>
      </div>
    </section>
    <!-- Close Content Project Detail -->

    <script src="../assets/js/pro-detail.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"
    ></script>
  </body>
</html>