<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Personal Web | {{tittleTab}}</title>
    <link rel="icon" type="image/x-icon" href="../assets/img/fav-mylogo.png" />

    <link rel="stylesheet" href="../assets/css/contact.css" />
    <link rel="stylesheet" href="../assets/css/nav.css" />
    <link rel="stylesheet" href="../assets/css/index.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <!-- Navbar -->
    <nav class="navbar bg-nav navbar-expand-lg px-lg-5 px-sm-4 py-4">
      <div class="container-fluid">
        <a class="navbar-brand me-5" href="#"><img
            src="../assets/img/mylogo.png"
            alt="Logo Dumbways"
          /></a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item me-4">
              <a
                class="nav-link text-dark"
                aria-current="page"
                href="/home"
              >Home</a>
            </li>
            <li class="nav-item me-4">
              <a class="nav-link text-dark" href="/project">Add Project</a>
            </li>
            <li class="nav-item me-4">
              <a class="nav-link text-dark" href="/testimonial">Testimonials</a>
            </li>
          </ul>
          <form class="d-flex" role="search">
            <a
              href="#"
              class="btn bg-dark text-light w-100"
              type="submit"
            >Contact Me</a>
          </form>
        </div>
      </div>
    </nav>
    <!-- Close Navbar -->

    <!-- Form Content -->
    <div class="me-3 ms-3 pb-5">
      <div class="row justify-content-center">
        <div class="col-lg-6 mt-3">
          <h1 class="fw-bold text-center mt-5 mb-4">GET IN TOUCH</h1>

          <!-- Form -->
          <form>
            <!-- Input Name -->
            <div class="mb-3">
              <label for="name" class="form-label fw-medium">Name</label>
              <input
                type="text"
                class="form-control shadow"
                id="name"
                aria-describedby="emailHelp"
                placeholder="Full Name"
              />
            </div>

            <!-- Input Email -->
            <div class="mb-3">
              <label for="email" class="form-label fw-medium">Email</label>
              <input
                type="text"
                class="form-control shadow"
                id="email"
                placeholder="johndoe@gmail.com"
              />
            </div>

            <!-- Input Phone -->
            <div class="mb-3">
              <label for="phone" class="form-label fw-medium">Phone Number</label>
              <input
                type="text"
                class="form-control shadow"
                id="phone"
                placeholder="+62 XXX XXXX XXXX"
              />
            </div>

            <!-- Input Select -->
            <div class="mb-3">
              <label for="subject" class="form-label fw-medium">Subject</label>
              <select
                class="form-select shadow"
                aria-label="Default select example"
                id="subject"
              >
                <option value="" hidden></option>
                <option>Frontend Developer</option>
                <option>Backend Developer</option>
                <option>Fullstack Developer</option>
              </select>
            </div>

            <!-- Input Description -->
            <div class="mb-3">
              <label for="message" class="form-label fw-medium">Your Message</label>
              <textarea
                placeholder="Can i help you?"
                class="form-control shadow"
                id="message"
                rows="8"
              ></textarea>
            </div>

            <!-- Input Button Submit -->
            <div class="d-flex justify-content-end container-btn mt-4 pt-2">
              <input
                type="submit"
                value="Submit"
                class="btn btn-submit bg-dark text-light rounded-5 pe-4 ps-4"
                onclick="submited(event)"
              />
            </div>
          </form>
          <!-- Close Form -->
        </div>
      </div>
    </div>

    <script src="../assets/js/contact.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"
    ></script>
  </body>
</html>